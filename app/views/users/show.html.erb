<div class="row">
  <aside class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %></h3>
      </div>
      <div class="panel-body al-c">
          <% if @user.image? %>
            <%= image_tag @user.image, width: "60%" %>
          <% else %>
            <%= image_tag "Noimage.png", width: "60%" %>
          <% end %>
      </div>
    </div>
  </aside>

  <div class="col-md-8">
    <p>メールアドレス: <%= @user.email %></p>
    <p><%= link_to 'お気に入り', favorites_path %></p>
    <p><%= link_to "ユーザー情報を編集する", edit_user_path(@user.id) %></p>
    <p><%= link_to '投稿一覧に戻る', pictures_path %></p>
  </div>
</div>


